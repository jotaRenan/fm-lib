{
  "compilerOptions": {
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "module": "AMD",
    "outDir": "dist/declarations",
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "outFile": "dist/declarations/index.d.ts",
    "jsx": "react",
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "**/stories/**/*", "./storybook"]
}
